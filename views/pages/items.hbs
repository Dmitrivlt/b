<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Предметы</h1>
</div>

<div class="row">
    <div class="card shadow mb-4" style="width: 100%;">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTableItems" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Действие</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Действие</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{ this.id }}</td>
                            <td>{{ this.market_hash_name }}</td>
                            <td>{{ this.price }}$</td>
                            <td>
                                <a href="/api/admin/items/{{ this.id }}" class="btn btn-primary btn-icon-split">
                                    <span class="text">Редактировать</span>
                                </a>
                            </td>
                        </tr>
                    {{/each }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $('#dataTableItems').dataTable({
        "order": [[ 0, 'desc' ]]
    });
</script>