<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="/js/datetimepicker.js"></script>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Создание розыгрыша</h1>
</div>

<form method="post" action="/api/admin/giveaway/create">
    {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {{/if}}

    <div class="form-group">
        <label>ClassID разыгрываемого предмета</label>
        <input class="form-control" type="text" name="classId" required value="">
    </div>

    <div class="form-group">
        <label>Дата окончания</label>
        <input class="form-control" id="datepicker" type="text" name="end_time" required value="">
    </div>

    <button type="submit" class="btn btn-primary btn-icon-split">
        <span class="text">Создать</span>
    </button>
</form>

<script>
    $(function() {
        $("#datepicker").datetimepicker({
            dateFormat: 'yy-mm-dd',
            timeFormat:  "HH:mm:ss"
        });
    });
</script>
